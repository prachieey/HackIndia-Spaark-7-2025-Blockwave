# Application
NODE_ENV=development
PORT=5001
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7776000
JWT_COOKIE_EXPIRE=90
COOKIE_SECRET=your_cookie_secret_key_here_change_in_production

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/scantyx-dev
MONGODB_URI_DEV=mongodb://127.0.0.1:27017/scantyx-dev
MONGODB_URI_TEST=mongodb://127.0.0.1:27017/scantyx-test

# Email
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_FROM=Scantyx <noreply@scantyx.com>

# Frontend
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs

# File Uploads
MAX_FILE_UPLOAD=5 # in MB
FILE_UPLOAD_PATH=./public/uploads

# Network URLs (Blockchain)
INFURA_API_KEY=your_infura_api_key

# Private Keys (for deployment)
PRIVATE_KEY=your_private_key

# Contract Addresses
EVENT_TICKET_CONTRACT=0xYourDeployedContractAddress

# Gas Reporter (optional)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
REPORT_GAS=false
